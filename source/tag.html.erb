---
title: Tags
---

<div class="inner">
  <h1>Articles tagged '<%= tagname %>'</h1>
  <main class="content">
  <% page_articles.each_with_index do |article, i| %>
    <article class="post post--list">
      <h2 class="post-title"><%= link_to article.title, article %></h2>
      <p class="post-author"><%= link_to 'Author', '#' %>, <%= article.date.strftime('%A, %B %e %Y') %></p>
      <%= article.body %>
    </article>
  <% end %>

  </main>
  <aside class="sidebar">
    <%= partial "modules/_blog-sidebar" %>
  </aside>
</div>