<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport", content="width=device-width">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "2014" %> | Rails Girls Summer of Code</title>
    
    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "vendor/modernizr-2.7.1-custom.min" %>
  </head>
  
  <body class="<%= page_classes %>">

    <div class="siteWrapper">
      
      <header class="siteHeader" id="siteHeader">
        <%= partial "modules/_header" %>
      </header>

      <main class="siteMain" id="siteMain">
        <%= yield %>
        <div id="mainFooter"></div>
      </main>

      <footer class="siteFooter" id="siteFooter">
        <%= partial "modules/_footer"%>
      </footer>

    </div>
    <%= javascript_include_tag  "vendor/jquery-2.1.0.min" %>
    <%= javascript_include_tag  "all" %>
  </body>
</html>