<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport", content="width=device-width">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Text Setup" %></title>
    
    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "vendor/modernizr-2.7.1-custom.min" %>
  </head>
  
  <body class="<%= page_classes %>">

    <div class="siteWrapper">

      <header class="siteHeader" id="siteHeader">
        <%= partial "modules/_header" %>
      </header>

      <main class="siteMain" id="sitemain">
        <div class="inner">
          <article class="content">
            <h1 class="post post--single"><%= current_article.title %></h1>
            <p class="post-author"><%= link_to current_article.data.author, '//twitter.com/'+ current_article.data.twitter %>, <%= current_article.date.strftime('%A, %B %e %Y') %></p>
            <%= yield %>

            <div class="blog-share">
              <p><a href="" target="_blank">Tweet</a><a href="" target="_blank">Share</a><a href="" target="_blank">Like</a></p>
            </div> <!-- / blog-share -->

            <div id="disqus_thread"></div>
            <script type="text/javascript">
                /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                var disqus_shortname = 'rgsoc'; // required: replace example with your forum shortname
                var disqus_identifier = '{{ page.permalink }}';
                /* * * DON'T EDIT BELOW THIS LINE * * */
                (function() {
                    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                })();
            </script>
            <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
            <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>

          </article>
          <aside class="sidebar">
            <%= partial "modules/_blog-sidebar" %>
          </aside>
        </div>
        <div id="mainFooter"></div>
      </main>

      <footer class="siteFooter" id="siteFooter">
        <%= partial "modules/_footer"%>
      </footer>

    </div>
    <%= javascript_include_tag  "all" %>
  </body>
</html>